{{ 'section-hero-one.css' | asset_url | stylesheet_tag }}

<div class="hero-one" style="color: {{ section.settings.text_color }};">
  {% if section.settings.banner_image != blank %}
    <div class="hero-banner">
      <img src="{{ section.settings.banner_image | img_url: '2000x' }}" 
           alt="{{ section.settings.banner_image.alt | escape }}"
           loading="lazy">
      {% if section.settings.button_label != blank %}
        <div class="button-container">
          <a href="{{ section.settings.button_link | default: '#' }}" 
             class="button button--primary hero-one__button"
             style="background-color: {{ section.settings.button_bg_color }}; color: {{ section.settings.button_text_color }};"
             {% if section.settings.button_new_tab %}target="_blank" rel="noopener"{% endif %}>
            {{ section.settings.button_label }}
          </a>
        </div>
      {% endif %}
      
    </div>
  {% endif %}
  
  <div class="page-width">
    <div class="hero-one__content">
      <div class="hero-one__content-wrapper">
        {% if section.settings.heading != blank %}
          <h1 class="hero-one__heading">{{ section.settings.heading }}</h1>
        {% endif %} 
        
        {% if section.settings.subheading_1 != blank %}
          <p class="hero-one__subheading-1">{{ section.settings.subheading_1 }}</p>
        {% endif %}
        
        {% if section.settings.subheading_2 != blank %}
          <p class="hero-one__subheading-2">{{ section.settings.subheading_2 }}</p>
        {% endif %}
        
        {% if section.settings.button_label != blank %}
          <a href="{{ section.settings.button_link | default: '#' }}" 
             class="button button--primary hero-one__button"
             style="background-color: {{ section.settings.button_bg_color }}; color: {{ section.settings.button_text_color }};"
             {% if section.settings.button_new_tab %}target="_blank" rel="noopener"{% endif %}>
            {{ section.settings.button_label }}
          </a>
        {% endif %}
      </div>
    </div>
    
    {% if section.settings.hero_image != blank %}
      <div class="hero-one__image-container">
        <img src="{{ section.settings.hero_image | img_url: '800x' }}" 
             alt="{{ section.settings.hero_image.alt | escape }}"
             loading="lazy">
      </div>
    {% endif %}
  </div>
</div>

{% schema %}
{
  "name": "Hero One",
  "settings": [
    {
      "type": "header",
      "content": "Background"
    },
    {
      "type": "image_picker",
      "id": "banner_image",
      "label": "Top Banner Image",
      "info": "Recommended size: 2000x1000px"
    },
    {
      "type": "image_picker",
      "id": "hero_image",
      "label": "Content Section Image",
      "info": "Recommended size: 1000x1000px"
    },
    {
      "type": "header",
      "content": "Content"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Welcome to Our Store"
    },
    {
      "type": "text",
      "id": "subheading_1",
      "label": "Subheading 1",
      "default": "Discover amazing products"
    },
    {
      "type": "text",
      "id": "subheading_2",
      "label": "Subheading 2",
      "default": "Shop now and get 20% off"
    },
    {
      "type": "header",
      "content": "Button"
    },
    {
      "type": "text",
      "id": "button_label",
      "label": "Button Label",
      "default": "Shop Now"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button Link"
    },
    {
      "type": "checkbox",
      "id": "button_new_tab",
      "label": "Open in new tab",
      "default": false
    },
    {
      "type": "header",
      "content": "Colors"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Text Color",
      "default": "#ffffff"
    },
    {
      "type": "color",
      "id": "button_bg_color",
      "label": "Button Background Color",
      "default": "#000000"
    },
    {
      "type": "color",
      "id": "button_text_color",
      "label": "Button Text Color",
      "default": "#ffffff"
    }
  ],
  "presets": [
    {
      "name": "Hero One",
      "category": "Image"
    }
  ]
}
{% endschema %}
