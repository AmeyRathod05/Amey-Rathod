{%- if section.settings.enable_announcement -%}
  <style>
    .simple-announcement-bar {
      padding: 10px 0;
      width: 100%;
      z-index: 10;
      position: relative;
      background-color: {{ section.settings.bg_color | default: '#F5F5F5' }};
    }

    .announcement-content {
      padding: 5px 0;
      text-align: {{ section.settings.text_align }};
    }

    .announcement-text {
      margin: 0;
      font-size: 14px;
      font-weight: 500;
      line-height: 1.4;
      letter-spacing: 0.5px;
      color: {{ section.settings.text_color | default: '#000000' }};
    }

    .announcement-link {
      text-decoration: none;
      display: block;
      transition: opacity 0.2s ease;
    }

    .announcement-link:hover {
      opacity: 0.8;
      text-decoration: none;
    }
  </style>

  <div class="simple-announcement-bar">
    <div class="page-width">
      <div class="announcement-content">
        {%- if section.settings.text != blank -%}
          {%- if section.settings.link != blank -%}
            <a href="{{ section.settings.link }}" class="announcement-link">
          {%- endif -%}
          
          <p class="announcement-text">
            {{ section.settings.text | escape }}
          </p>
          
          {%- if section.settings.link != blank -%}
            </a>
          {%- endif -%}
        {%- endif -%}
      </div>
    </div>
  </div>
{%- endif -%}

{% schema %}
{
  "name": "Simple Announcement Bar",
  "settings": [
    {
      "type": "checkbox",
      "id": "enable_announcement",
      "label": "Enable announcement bar",
      "default": true
    },
    {
      "type": "text",
      "id": "text",
      "label": "Announcement text",
      "default": "Announce something important here!"
    },
    {
      "type": "url",
      "id": "link",
      "label": "Link"
    },
    {
      "type": "color",
      "id": "bg_color",
      "label": "Background color",
      "default": "#F5F5F5"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Text color",
      "default": "#000000"
    },
    {
      "type": "select",
      "id": "text_align",
      "label": "Text alignment",
      "options": [
        {
          "value": "left",
          "label": "Left"
        },
        {
          "value": "center",
          "label": "Center"
        },
        {
          "value": "right",
          "label": "Right"
        }
      ],
      "default": "center"
    }
  ],
  "presets": [
   {
      "name": "t:sections.simple.announcement-bar.presets.name",
      "blocks": [
        {
          "type": "announcement"
        }
      ]
    }
  ]
}
{% endschema %}
